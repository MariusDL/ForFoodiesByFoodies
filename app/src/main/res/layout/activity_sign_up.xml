<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"

    tools:context=".SignUp">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="304dp"
        android:layout_height="49dp"
        android:layout_marginTop="16dp"
        android:text="Create new account"
        android:textAlignment="center"
        android:textColor="#8BC34A"
        android:textIsSelectable="false"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/sign_up_first_name"
        android:layout_width="270dp"
        android:layout_height="51dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="68dp"
        android:background="@color/common_google_signin_btn_text_light_default"
        android:ems="10"
        android:hint="    First name"
        android:inputType="textPersonName"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_add_image" />

    <EditText
        android:id="@+id/sign_up_last_name"
        android:layout_width="270dp"
        android:layout_height="53dp"
        android:layout_marginTop="8dp"
        android:background="@color/common_google_signin_btn_text_light_default"
        android:ems="10"
        android:hint="    Last name"
        android:inputType="textPersonName"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/sign_up_first_name"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_first_name" />

    <EditText
        android:id="@+id/sign_up_email"
        android:layout_width="270dp"
        android:layout_height="53dp"
        android:layout_marginTop="16dp"
        android:background="@color/common_google_signin_btn_text_light_default"
        android:ems="10"
        android:hint="    Email"
        android:inputType="textPersonName"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/sign_up_last_name"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_last_name" />

    <EditText
        android:id="@+id/sign_up_password"
        android:layout_width="270dp"
        android:layout_height="53dp"
        android:layout_marginTop="16dp"
        android:background="@color/common_google_signin_btn_text_light_default"
        android:ems="10"
        android:hint="    Password"
        android:inputType="textPassword"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/sign_up_email"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_email" />

    <Button
        android:id="@+id/register_button"
        android:layout_width="150dp"
        android:layout_height="51dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="36dp"
        android:background="@android:color/holo_green_dark"
        android:text="Register"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_password" />

    <Button
        android:id="@+id/back_to_sign_in"
        android:layout_width="150dp"
        android:layout_height="51dp"
        android:layout_marginStart="36dp"
        android:background="@android:color/holo_green_dark"
        android:text="Back to sign in"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/register_button" />

    <ImageView
        android:id="@+id/sign_up_add_image"
        android:layout_width="149dp"
        android:layout_height="136dp"
        android:layout_marginTop="40dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@drawable/add_photo_icon" />

    <!-- IMAGE IS IN A CARDVIEW TO HAVE ROUNDED CORNERS -->


</androidx.constraintlayout.widget.ConstraintLayout>