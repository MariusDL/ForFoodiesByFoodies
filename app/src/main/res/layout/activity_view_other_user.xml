<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewOtherUser"
    android:background="@drawable/background">


    <TextView
        android:id="@+id/view_other_user_is_food_critic"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:layout_marginTop="16dp"
        android:background="#5E6E6E6E"
        android:text="Food Critic"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@+id/textView12"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

    <TextView
        android:id="@+id/view_other_user_first_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="8dp"
        android:background="#5E6E6E6E"
        android:text="First name"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.143"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_other_user_image" />

    <TextView
        android:id="@+id/view_other_user_last_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#5E6E6E6E"
        android:text="Last name"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="@+id/view_other_user_first_name"
        app:layout_constraintTop_toBottomOf="@+id/view_other_user_first_name" />

    <TextView
        android:id="@+id/view_other_user_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#5E6E6E6E"
        android:text="Email"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="@+id/view_other_user_last_name"
        app:layout_constraintTop_toBottomOf="@+id/view_other_user_last_name" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#5E6E6E6E"
        android:text="Votes"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@+id/view_other_user_email"
        app:layout_constraintTop_toBottomOf="@+id/view_other_user_email" />

    <TextView
        android:id="@+id/view_other_user_votes_received"
        android:layout_width="40dp"
        android:layout_height="46dp"
        android:layout_marginStart="8dp"
        android:background="#5E6E6E6E"
        android:text="0"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView12"
        app:layout_constraintStart_toEndOf="@+id/textView12" />

    <Button
        android:id="@+id/view_other_user_promote_to_critic"
        android:layout_width="120dp"
        android:layout_height="52dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="36dp"
        android:background="@android:color/holo_green_dark"
        android:text="Promote to critic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_other_user_is_food_critic" />

    <Button
        android:id="@+id/view_other_user_demote_user"
        android:layout_width="133dp"
        android:layout_height="52dp"
        android:layout_marginStart="60dp"
        android:background="@android:color/holo_green_dark"
        android:text="Demote user"
        app:layout_constraintBottom_toBottomOf="@+id/view_other_user_promote_to_critic"
        app:layout_constraintStart_toEndOf="@+id/view_other_user_promote_to_critic" />

    <ImageView
        android:id="@+id/view_other_user_image"
        android:layout_width="206dp"
        android:layout_height="209dp"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/default_profile_photo" />

</androidx.constraintlayout.widget.ConstraintLayout>