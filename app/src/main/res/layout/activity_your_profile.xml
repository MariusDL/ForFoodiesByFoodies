<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".YourProfile"
    android:background="@drawable/background"
    >


    <Button
        android:id="@+id/your_profile_change_image"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginStart="60dp"
        android:background="@android:color/holo_green_dark"
        android:text="Change image"
        app:layout_constraintBottom_toBottomOf="@+id/your_profile_edit_password"
        app:layout_constraintStart_toEndOf="@+id/your_profile_edit_password" />

    <TextView
        android:id="@+id/your_profile_critic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="40dp"
        android:text="Food critic"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/your_profile_edit_password" />

    <EditText
        android:id="@+id/your_profile_first_name"
        android:layout_width="300dp"
        android:layout_height="54dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="8dp"
        android:background="@color/common_google_signin_btn_text_light_disabled"
        android:ems="10"
        android:hint="First name"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/your_profile_image" />

    <EditText
        android:id="@+id/your_profile_last_name"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@color/common_google_signin_btn_text_light_disabled"
        android:ems="10"
        android:hint="Last name"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/your_profile_first_name" />

    <EditText
        android:id="@+id/your_profile_email"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@color/common_google_signin_btn_text_light_disabled"
        android:ems="10"
        android:hint="Email"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/your_profile_last_name" />

    <Button
        android:id="@+id/your_profile_edit_profile"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/holo_green_dark"
        android:text="Edit profile"
        app:layout_constraintStart_toStartOf="@+id/your_profile_email"
        app:layout_constraintTop_toBottomOf="@+id/your_profile_email" />

    <Button
        android:id="@+id/your_profile_apply_changes"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginStart="60dp"
        android:background="@android:color/holo_green_dark"
        android:text="Apply changes"
        app:layout_constraintBaseline_toBaselineOf="@+id/your_profile_edit_profile"
        app:layout_constraintStart_toEndOf="@+id/your_profile_edit_profile" />

    <Button
        android:id="@+id/your_profile_edit_password"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginTop="28dp"
        android:background="@android:color/holo_green_dark"
        android:text="Edit password"
        app:layout_constraintStart_toStartOf="@+id/your_profile_edit_profile"
        app:layout_constraintTop_toBottomOf="@+id/your_profile_edit_profile" />

    <TextView
        android:id="@+id/textView1241"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="236dp"
        android:layout_marginTop="40dp"
        android:text="Votes:"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/your_profile_edit_password" />

    <TextView
        android:id="@+id/your_profile_votes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="0"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView1241"
        app:layout_constraintStart_toEndOf="@+id/textView1241" />

    <ImageView
        android:id="@+id/your_profile_image"
        android:layout_width="170dp"
        android:layout_height="168dp"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/default_profile_photo" />


</androidx.constraintlayout.widget.ConstraintLayout>